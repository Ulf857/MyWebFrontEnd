            <table class="table">
                <thead>
                    <tr>
                        <th>Bemerkung</th>
                        <th>Umsatz</th>
                    </tr>
                </thead>
                <tbody>
               @foreach(Transaction item in account.allTransactions)
                    {
                       <tr>
                            <td>@item.Notes</td>
                            <td>@item.Amount</td>        
                       </tr> 

                    }    
                </tbody>
            </table>   





